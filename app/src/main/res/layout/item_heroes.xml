<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/image_hero"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="#e1e1e1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_hero"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.swarawan.dotaheroes.widget.TextViewTrajan
                    android:id="@+id/text_hero_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anti-Mage"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <com.swarawan.dotaheroes.widget.TextViewTrajan
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ("
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <com.swarawan.dotaheroes.widget.TextViewTrajan
                    android:id="@+id/text_hero_attribute_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STR"
                    android:textColor="@color/strength"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <com.swarawan.dotaheroes.widget.TextViewTrajan
                    android:id="@+id/text_hero_attribute_agi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AGI"
                    android:textColor="@color/agility"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <com.swarawan.dotaheroes.widget.TextViewTrajan
                    android:id="@+id/text_hero_attribute_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INT"
                    android:textColor="@color/intelligence"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <com.swarawan.dotaheroes.widget.TextViewTrajan
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <com.swarawan.dotaheroes.widget.TextViewTrajan
                android:id="@+id/text_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health: "
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <com.swarawan.dotaheroes.widget.TextViewTrajan
                android:id="@+id/text_mana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANA: "
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <com.swarawan.dotaheroes.widget.TextViewTrajan
                android:id="@+id/text_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STR: "
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <com.swarawan.dotaheroes.widget.TextViewTrajan
                android:id="@+id/text_agi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGI: "
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <com.swarawan.dotaheroes.widget.TextViewTrajan
                android:id="@+id/text_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INT: "
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>